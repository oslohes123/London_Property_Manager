<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane styleClass="outerPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.london_property_market.UI.Statistics.StatisticsController">

   <right>
      <Button fx:id="rightStatsButton" mnemonicParsing="false" onMouseClicked="#rightButtonClick" prefHeight="250.0" prefWidth="110.0" styleClass="statButton" text="&gt;" textAlignment="CENTER" textOverrun="CLIP" BorderPane.alignment="CENTER">
         <font>
            <Font name="Calibri" size="55.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
         </BorderPane.margin>
      </Button>
   </right>
   <left>
      <Button fx:id="leftStatsButton" mnemonicParsing="false" onMouseClicked="#leftButtonClick" prefHeight="250.0" prefWidth="110.0" styleClass="statButton" text="&lt;" textAlignment="CENTER" textOverrun="CLIP" BorderPane.alignment="CENTER">
         <font>
            <Font name="Calibri" size="55.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
         </BorderPane.margin>
      </Button>
   </left>
   <top>
      <Label fx:id="statsTitle" styleClass="colouredLabel" text="StatTitle" BorderPane.alignment="CENTER">
         <font>
            <Font size="32.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <TableView fx:id="statTable" BorderPane.alignment="CENTER">
        <columns>
        </columns>
         <BorderPane.margin>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
         </BorderPane.margin>
      </TableView>
   </center>
   <bottom>
      <Pane BorderPane.alignment="CENTER" />
   </bottom>
   <stylesheets>
      <URL value="@../Styles/views/mainStyle.css" />
      <URL value="@../Styles/views/statView.css" />
   </stylesheets>
</BorderPane>
