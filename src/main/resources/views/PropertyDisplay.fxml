<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="400.0" stylesheets="@../Styles/views/propertyViewer.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <bottom>
      <Pane prefHeight="60.0" style="-fx-background-color: grey;" BorderPane.alignment="CENTER" />
   </bottom>
   <left>
      <Button fx:id="previousProperties" disable="true" mnemonicParsing="false" onAction="#viewPrevious" prefHeight="100.0" text="&lt;" BorderPane.alignment="CENTER">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
   </left>
   <right>
      <Button fx:id="nextProperties" mnemonicParsing="false" onAction="#viewNext" prefHeight="103.0" text="&gt;" BorderPane.alignment="CENTER">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
   </right>
   <top>
      <HBox alignment="CENTER_RIGHT" prefHeight="60.0" style="-fx-background-color: grey;" BorderPane.alignment="CENTER">
         <children>
            <Label text="Sort By:" />
            <ComboBox fx:id="sortByCombo" promptText="--" visibleRowCount="5">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></ComboBox>
         </children>
      </HBox>
   </top>
   <center>
      <GridPane fx:id="propertyDisplayGrid" alignment="CENTER" hgap="10.0" style="-fx-padding: 10px; -fx-spacing: 8px;" vgap="10.0" BorderPane.alignment="CENTER">
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </GridPane>
   </center>
</BorderPane>
