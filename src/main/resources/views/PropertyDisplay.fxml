<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <bottom>
      <Pane prefHeight="60.0" style="-fx-background-color: grey;" BorderPane.alignment="CENTER" />
   </bottom>
   <left>
      <Button fx:id="previousProperties" disable="true" mnemonicParsing="false" onAction="#viewPrevious" prefHeight="100.0" text="&lt;" BorderPane.alignment="CENTER">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
   </left>
   <right>
      <Button fx:id="nextProperties" mnemonicParsing="false" onAction="#viewNext" prefHeight="103.0" text="&gt;" BorderPane.alignment="CENTER">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
   </right>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox fx:id="topPropertyDisplayBox" />
            <HBox fx:id="botPropertyDisplayBox" />
         </children>
      </VBox>
   </center>
   <top>
      <HBox alignment="CENTER_RIGHT" prefHeight="60.0" style="-fx-background-color: grey;" BorderPane.alignment="CENTER">
         <children>
            <Label text="Sort By:" />
            <ComboBox fx:id="sortByCombo" promptText="--" visibleRowCount="5">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></ComboBox>
         </children>
      </HBox>
   </top>
</BorderPane>
