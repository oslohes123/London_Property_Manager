<HBox prefWidth="1000.0" style="-fx-alignment: center; -fx-spacing: 10; -fx-padding: 10;" styleClass="innerPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
